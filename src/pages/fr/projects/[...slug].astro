---
import { type CollectionEntry, getCollection } from "astro:content";
import { slugFromId } from "@lib/utils";
import ProjectDetailPage from "@components/ProjectDetailPage.astro";

export async function getStaticPaths() {
  const projects = (await getCollection("projects"))
    .filter((post) => !post.data.draft && post.id.startsWith("fr/"))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return projects.map((project) => ({
    params: { slug: slugFromId(project.id) },
    props: project,
  }));
}
type Props = CollectionEntry<"projects">;

const lang = Astro.locals.lang;
const project = Astro.props;
---

<ProjectDetailPage lang={lang} project={project} />
