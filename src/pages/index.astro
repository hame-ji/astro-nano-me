---
const baseUrl = import.meta.env.BASE_URL || "";
const redirectUrl = `${baseUrl}/en`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
    <title>Redirect</title>
  </head>
  <body>
    <p>Redirecting to <a href={redirectUrl}>/en</a></p>
  </body>
</html>
