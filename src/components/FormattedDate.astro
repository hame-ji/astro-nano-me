---
import { defaultLang } from "@i18n/ui";

interface Props {
  date: Date;
  lang?: string;
}

const { date, lang = defaultLang } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang === "fr" ? "fr-FR" : "en-US", {
      month: "long",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
